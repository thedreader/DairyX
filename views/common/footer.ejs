<style>

   .footer {
      position: relative;
      font-family: 'Readex Pro', sans-serif;
      display: flex;
      margin: auto;
      justify-content: center;
      align-items: center;
      padding: 1.5rem;
      margin-top: 50px;
      margin-bottom: 10px;
      font-size: 17px;
      width: max-content;
      overflow: hidden;
   }

   .footer p {
      position: relative;
      color: rgb(143, 143, 143);
   }

   a {
      text-decoration: none;
      color: black;
   }

   .fab {
      align-self: end;
      cursor: pointer;
      margin-right: 3px;
      margin-left: 3px;
      transition: all 0.3s ease-out;
   }

   .fab:hover {
      transform: scale(1.2);
   }

   .fa-github-square:hover {
      background: white;
      box-shadow: 0 0 10px 3px white;
   }

   .fa-linkedin:hover {
      background: #0a66c2;
      box-shadow: 0 0 10px 3px #0a66c2;
   }

   .fa-twitter-square:hover {
      background: #1d9bf0;
      box-shadow: 0 0 10px 3px #1d9bf0;
   }

   .fas {
      color: rgba(255, 0, 0, 0.733);
      animation-name: beat;
      animation-duration: 1s;
      animation-iteration-count: infinite;
   }

   .footer span {
      position: absolute;
      display: block;
      filter: hue-rotate(300deg);
   }

   .footer span:nth-child(1) {
      top: 0;
      left: -100%;
      width: 40%;
      height: 2px;
      background: linear-gradient(90deg, transparent, gold);
      animation: animate1 1.5s linear infinite;
   }

   @keyframes animate1 {
      0% {
         left: -100%;
      }

      50%,
      100% {
         left: 100%;
      }
   }

   .footer span:nth-child(2) {
      top: -100%;
      right: 0;
      width: 2px;
      height: 100%;
      background: linear-gradient(180deg, transparent, gold);
      animation: animate2 1.5s linear infinite;
      animation-delay: 0.6s;
   }

   @keyframes animate2 {
      0% {
         top: -100%;
      }

      50%,
      100% {
         top: 100%;
      }
   }

   .footer span:nth-child(3) {
      bottom: 0;
      right: -100%;
      bottom: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(-90deg, transparent, gold);
      animation: animate3 1.5s linear infinite;
      animation-delay: 1s;
   }

   @keyframes animate3 {
      0% {
         right: -100%;
      }

      50%,
      100% {
         right: 100%;
      }
   }

   .footer span:nth-child(4) {
      left: 0;
      bottom: -100%;
      width: 2px;
      height: 100%;
      background: linear-gradient(0deg, transparent, gold);
      animation: animate4 1.5s linear infinite;
      animation-delay: 1.34s;
   }

   @keyframes animate4 {
      0% {
         bottom: -100%;
      }

      50%,
      100% {
         bottom: 100%;
      }
   }

   @keyframes beat {
      0% {
         transform: scale(1);
         color: rgba(255, 0, 0, 0.733);
      }

      50% {
         transform: scale(0.6);
         color: pink;
      }
   }

   @media screen and (max-width: 500px) {
      .footer {
         font-size: 13px;
         padding: 1.2rem;
      }
   }
</style>
